# =============================================================================
# imanisa-finance - Environment Variables
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to git!
# =============================================================================

# -----------------------------------------------------------------------------
# Database (Turso or Local SQLite)
# -----------------------------------------------------------------------------
# For Turso cloud database (recommended for Vercel):
# Create a database: turso db create imanisa-finance
# Get URL: turso db show imanisa-finance --url
# Get token: turso db tokens create imanisa-finance
TURSO_URL=
TURSO_AUTH_TOKEN=

# For local SQLite (development only, used if TURSO_URL is not set):
DATABASE_PATH=./data/imanisa.db

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
# Base URL for the app (use your Freebox IP in production)
PUBLIC_BASE_URL=http://localhost:5173

# Auth secret for session encryption (change this in production!)
AUTH_SECRET=your-random-secret-key

# -----------------------------------------------------------------------------
# Telegram Notifications
# -----------------------------------------------------------------------------
# Create a bot via @BotFather on Telegram
# Get your chat ID by messaging @userinfobot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# -----------------------------------------------------------------------------
# Binance API (Read-Only permissions only!)
# -----------------------------------------------------------------------------
# Create API keys at: https://www.binance.com/en/my/settings/api-management
# Enable ONLY "Enable Reading" - do NOT enable trading/withdrawals
BINANCE_API_KEY=
BINANCE_API_SECRET=

# -----------------------------------------------------------------------------
# Scraper Scheduler
# -----------------------------------------------------------------------------
# Cron expression for automatic sync (default: Monday 8:00 AM)
# Format: minute hour day-of-month month day-of-week
# Examples:
#   "0 8 * * 1"    = Every Monday at 8:00 AM
#   "0 8 * * *"    = Every day at 8:00 AM
#   "0 8 1,15 * *" = 1st and 15th of each month at 8:00 AM
#   "0 */6 * * *"  = Every 6 hours
SCRAPER_CRON=0 8 * * 1

# Cron for Caisse d'Épargne sync (default: Monday 7:00 AM)
CE_SCRAPER_CRON=0 7 * * 1

# -----------------------------------------------------------------------------
# Caisse d'Épargne - Compte Personnel
# -----------------------------------------------------------------------------
CE_PERSO_USERNAME=
CE_PERSO_PASSWORD=

# -----------------------------------------------------------------------------
# Caisse d'Épargne - Compte SCI
# -----------------------------------------------------------------------------
CE_SCI_USERNAME=
CE_SCI_PASSWORD=

